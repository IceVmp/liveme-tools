{
  "name": "LiveMeTools",
  "title": "LiveMe Tools",
  "version": "5.0.9",
  "minversion": "5.0.1",
  "description": "A tool designed to help in searching and viewing of LiveMe broadcasts.",
  "main": "index.js",
  "author": {
    "name": "The Coder",
    "email": "thecoder1975@gmail.com"
  },
  "homepage": "https://github.com/thecoder75/liveme-tools/",
  "devDependencies": {
    "electron": "^1.8.0",
    "electron-builder": "^19.22.1"
  },
  "dependencies": {
    "async": "^2.5.0",
    "axios": "^0.16.2",
    "electron-is-dev": "^0.3.0",
    "electron-settings": "^3.1.1",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^4.0.1",
    "init": "^0.1.2",
    "request": "^2.81.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thecoder75/liveme-tools"
  },
  "keywords": [
    "node",
    "electron",
    "video",
    "tools",
    "liveme"
  ],
  "contributors": [
    "thecoder75",
    "polydragon"
  ],
  "license": "GPL3",
  "build": {
    "appId": "com.thecoderstoolbox.livemetools",
    "productName": "LiveMe Tools",
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dir"
      ],
      "identity": null,
      "icon": "build/appicon.icns",
      "extraResources": [
        "ffmpeg.macos"
      ]
    },
    "win": {
      "target": [
        "dir"
      ],
      "icon": "build/appicon.ico",
      "extraResources": [
        "ffmpeg.exe"
      ]
    },
    "linux": {
      "target": [
        "dir"
      ],
      "maintainer": "thecoder1975@gmail.com",
      "extraResources": [
        "ffmpeg.linux"
      ]
    },
    "deb": {
      "compression": "bzip2"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "./node_modules/.bin/electron . --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist-win": "build -w --x64 ",
    "dist-linux": "build -l --x64",
    "dist-mac": "build -m --x64",
    "dist": "rm -rd dist/* && npm run dist-mac && npm run dist-linux && npm run dist-win"
  }
}
