{
  "name": "LiveMeTools",
  "title": "LiveMe Tools",
  "version": "6.0.8",
  "minversion": "6.0.8",
  "description": "A tool designed to help in searching and viewing of LiveMe broadcasts.",
  "main": "index.js",
  "author": {
    "name": "The Coder",
    "email": "thecoder1975@gmail.com"
  },
  "homepage": "https://github.com/thecoder75/liveme-tools/",
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.36.0"
  },
  "dependencies": {
    "async": "^2.5.0",
    "axios": "^0.16.2",
    "electron-is-dev": "^0.3.0",
    "electron-settings": "^3.1.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^4.0.1",
    "init": "^0.1.2",
    "liveme-api": "^1.1.3",
    "request": "^2.83.0",
    "shelljs": "^0.7.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thecoder75/liveme-tools"
  },
  "keywords": [
    "node",
    "electron",
    "video",
    "tools",
    "liveme"
  ],
  "contributors": [
    "thecoder75",
    "polydragon"
  ],
  "license": "GPL3",
  "build": {
    "appId": "com.thecoderstoolbox.livemetools",
    "productName": "LiveMeTools",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "build/appicon.icns"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/appicon.ico"
    },
    "linux": {
      "target": [
        "tar.bz2"
      ],
      "maintainer": "thecoder1975@gmail.com"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "./node_modules/.bin/electron . --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist-win": "build -w --ia32 --x64",
    "dist-linux": "build -l",
    "dist-mac": "build -m",
    "dist": "rm -rd dist/* && npm run dist-mac && npm run dist-linux && npm run dist-win"
  }
}
